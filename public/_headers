# Cache headers untuk optimasi performa
# Static assets dengan versioning - cache selama 1 tahun
/_nuxt/*
  Cache-Control: public, max-age=31536000, immutable

# WASM files - cache selama 1 bulan
*.wasm
  Cache-Control: public, max-age=2592000
  Access-Control-Allow-Origin: *

# Images - cache selama 1 bulan
*.png
  Cache-Control: public, max-age=2592000
*.jpg
  Cache-Control: public, max-age=2592000
*.jpeg
  Cache-Control: public, max-age=2592000
*.webp
  Cache-Control: public, max-age=2592000
*.svg
  Cache-Control: public, max-age=2592000
*.ico
  Cache-Control: public, max-age=2592000

# JavaScript dan CSS - cache selama 1 bulan
*.js
  Cache-Control: public, max-age=2592000
*.css
  Cache-Control: public, max-age=2592000

# Fonts - cache selama 1 tahun
*.woff
  Cache-Control: public, max-age=31536000
*.woff2
  Cache-Control: public, max-age=31536000
*.ttf
  Cache-Control: public, max-age=31536000
*.eot
  Cache-Control: public, max-age=31536000

# Cloudflare email decode script - cache lebih lama
/cloudflare-static/*
  Cache-Control: public, max-age=7776000

# SQL dump files - cache selama 1 hari untuk mengurangi requests
*sql_dump.txt
  Cache-Control: public, max-age=86400

# Icon JSON files - cache selama 1 hari
/_nuxt_icon/*
  Cache-Control: public, max-age=86400

# HTML files - cache singkat dengan revalidation
/*.html
  Cache-Control: public, max-age=3600, s-maxage=3600, stale-while-revalidate=86400

# Manifest dan service worker
/manifest.json
  Cache-Control: public, max-age=86400
/sw.js
  Cache-Control: public, max-age=0, must-revalidate

# Security headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
